<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.binding.demo.ui.bottom.BottomSheetModel"/>
    </data>
    <android.support.design.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doclick"
                android:text="展示BottomSheet"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doclick"
                android:text="展示BottomSheetDialog"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doclick"
                android:text="展示BottomSheetDialogFragment"/>
        </LinearLayout>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:behavior_hideable="true"
            app:behavior_peekHeight="50dp"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="这是BottomSheets,拖动试试"/>


                <com.binding.model.view.radio.CheckRadioGroup
                    android:layout_width="match_parent"
                    app:position="@={vm.currentItem}"
                    android:layout_height="50dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                </com.binding.model.view.radio.CheckRadioGroup>
                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    app:adapter="@{vm.adapter}"
                    app:position="@={vm.currentItem}"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

</layout>