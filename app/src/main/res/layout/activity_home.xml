<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.binding.demo.ui.home.HomeModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/home_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55.2dp"/>

        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="63dp">

            <RadioGroup
                app:checked="@{vm}"
                android:background="@color/white"
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="55.2dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRadioButton
                    style="@style/home_navigation"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/home_page"
                    android:text="@string/home_page" />

                <android.support.v7.widget.AppCompatRadioButton
                    style="@style/home_navigation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/home_system"
                    android:text="@string/system" />

                <android.support.v7.widget.AppCompatRadioButton
                    style="@style/home_navigation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/home_device"
                    android:text="@string/device"
                    />
            </RadioGroup>
        </FrameLayout>
    </FrameLayout>
</layout>
